{
  "name": "minimon.js",
  "version": "1.0.0",
  "description": "Pokemon mini emulator",
  "main": "src/index.jsx",
  "scripts": {
    "core": "cd core; make",
    "table": "python3 ./tools/convert.py > ./src/system/table.js",
    "start": "npm run table; webpack-dev-server --open --mode development",
    "build": "npm run table; npm run core; webpack --mode production",
    "deploy": "npm run build; scp public/* node@scyl.us:~/minimon/"
  },
  "keywords": [],
  "author": "Bryon Vandiver",
  "license": "ISC",
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ],
    "presets": [
      "@babel/preset-react"
    ]
  },
  "bin": {
    "minimon.js": "app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asterick/minimon.js.git"
  },
  "bugs": {
    "url": "https://github.com/asterick/minimon.js/issues"
  },
  "homepage": "https://github.com/asterick/minimon.js#readme",
  "dependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/preset-react": "^7.10.1",
    "@fluentui/react": "^7.119.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.3",
    "less-loader": "^6.1.0",
    "normalize.css": "^8.0.1",
    "raw-loader": "^4.0.1",
    "rc-dock": "^2.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-virtualized": "^9.21.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.43.0"
  },
  "devDependencies": {
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}
